{
  "compilerOptions": {
    "jsx": "react-jsx",             
    "target": "ES6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],                
    "module": "esnext",             
    "moduleResolution": "node",     
    "resolveJsonModule": true,      
    "esModuleInterop": true,        
    "strict": true,                 
    "skipLibCheck": true            
  },
  "include": ["src"],               
  "exclude": ["node_modules"]       
}
